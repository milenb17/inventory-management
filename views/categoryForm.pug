extends layout 

block content 
  h1 #{title} 

  form(method="POST", action='')
    div.form-group 
      label(for='title') Category: 
      input#title.form-control(type='text', placeholder='Produce, Bakery, Deli, etc.', name='title', value=(undefined === category ? '' : category.title))
    button.btn.btn-primary(type='submit') Submit 

  if errors 
    ul 
      for error in errors 
        li!= error.msg 